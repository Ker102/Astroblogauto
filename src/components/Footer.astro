<style>
	footer {
		padding: 3rem 1.5rem;
		background: rgba(var(--gray-50), 0.8);
		border-top: 1px solid rgba(var(--gray-200), 0.6);
		margin-top: 4rem;
	}
	
	.footer-shell {
		max-width: 1200px;
		margin: 0 auto;
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 2rem;
	}
	
	.footer-brand {
		display: flex;
		align-items: center;
		gap: 1rem;
	}
	
	.footer-logo {
		font-size: 1.25rem;
		font-weight: 700;
		letter-spacing: -0.03em;
		color: rgb(var(--gray-400));
	}
	
	.footer-brand p {
		margin: 0;
		font-size: 0.85rem;
		color: rgb(var(--gray-500));
	}
	
	.social-links {
		display: flex;
		gap: 0.5rem;
	}
	
	.social-links a {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 38px;
		height: 38px;
		color: rgb(var(--gray-400));
		border-radius: var(--radius-full);
		transition: all var(--transition-fast);
		background: transparent;
		border: 1px solid transparent;
	}
	
	.social-links a:hover {
		color: rgb(var(--gray-700));
		background: rgba(var(--gray-200), 0.6);
		border-color: rgba(var(--gray-300), 0.5);
	}
	
	@media (max-width: 720px) {
		footer {
			padding: 2rem 1.25rem;
		}
		
		.footer-shell {
			flex-direction: column;
			text-align: center;
			gap: 1.5rem;
		}
		
		.footer-brand {
			flex-direction: column;
			gap: 0.5rem;
		}
	}
</style>
